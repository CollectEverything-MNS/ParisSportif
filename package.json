{
    "name": "paris-sportif",
    "private": true,
    "scripts": {
        "install:project": "./scripts/install-project.sh",
        "start": "yarn install:project && docker compose --env-file env/.env.dev -f docker/docker-compose.infra.dev.yml -f docker/docker-compose.back.dev.yml up --build",
        "stop": "docker compose --env-file env/.env.dev -f docker/docker-compose.infra.dev.yml -f docker/docker-compose.back.dev.yml down",
        "restart": "yarn stop && yarn start",
        "prepare": "husky install"
    },
    "workspaces": [
        "templates/*",
        "services/*"
    ],
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
    "devDependencies": {
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "husky": "^9.1.7",
        "prettier": "^3.8.0"
    }
}
